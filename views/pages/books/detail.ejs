<!DOCTYPE html>
<html lang="en"> 

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Details</title>

  <link rel="stylesheet" href="/styles/reset.css" />
  <link rel="stylesheet" href="/styles/base.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/modules.css" />
  <link rel="stylesheet" href="/styles/icons.css" />
  <link href="https://fonts.googleapis.com/css?family=Cabin&display=swap" rel="stylesheet">
</head>

<body>
    <% SQLResults.forEach(book => { %>
    <form class="editForm" method="POST" action="/updateBookToDB">



      <span class="showForm"><h3 class="bookTitle"><%=book.title %></h3></span>
      <label class="editForm"> Edit Title: <input name="title" value="<%=book.title %>">
      </label>

      <span class="showForm"><p class="author"><%=book.author %></p></span>
      <label class="editForm"> Edit Author: <input name="author" value="<%=book.author %>">
      </label>

      <span class="showForm"><p class="author"><%=book.isbn %></p></span>
      <label class="editForm"> Edit ISBN: <input name="isbn" value="<%=book.isbn %>">
      </label>

      <img class="bookImg" src="<%=book.image_url %>">

      <span class="showForm"><p class="description"><%=book.description %></p></span>
      <label class="editForm">Edit Description: <input name="description" value="<%=book.description %>">
      </label>


      <select name="bookshelf">
        <% shelf.forEach(name => { %>
        <option value="<%= name.bookshelf %>"><%= name.bookshelf %></option>
        <% }); %>
      </select>
      
      

      <input type="hidden" name="id" value="<%=book.id %>">

      <input type="submit" value="Save Book to Shelf">
    </form>
    <% }); %>


    <a href="/" class="detailsLink">Home</a>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/scripts/showForm.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <link rel="stylesheet" href="/styles/reset.css" />
  <link rel="stylesheet" href="/styles/base.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/modules.css" />
  <link rel="stylesheet" href="/styles/icons.css" />
  <link href="https://fonts.googleapis.com/css?family=Cabin&display=swap" rel="stylesheet">
  <title>Searches</title>
</head>

<body>
  <main>
    <div id="screenBackground">
      <div id="screenViewPort">
        <h3 id="edit">Click Fields to Edit</h3>
        <ul>
          <% books.forEach( (book, index, array) => { %>
          <li class="bookItem">
            <form class="editForm" method="POST" action="/saveBookToDB">

              <input type="hidden" name="img_url" value="<%=book.img %>">
              <input type="hidden" name="isbn" value="<%=book.isbn %>">

              <span class="showForm"><h3 class="bookTitle"><%=book.title %></h3></span>
              <label class="editForm"> Edit Title: <input name="title" value="<%=book.title %>">
              </label>

              <span class="showForm" class="author"><p class="author"><%=book.author %></p></span>
              <label class="editForm"> Edit Author: <input class="editForm" name="author" value="<%=book.author %>">
              </label>

              <img class="bookImg" src="<%=book.img %>">

              <span class="showForm"><p class="description"><%=book.description %></p></span>
              <label class="editForm">Edit Description: <input class="editForm" name="description" value="<%=book.description %>">
              </label>

              <span class="showForm">BOOKSHELF: <%=book.bookshelf %></span>
              <label class="editForm">Edit Book Shelf:<input type="textbox" name="bookshelf" value="<%=book.bookshelf %>">
              </label>

              <input type="submit" value="Save Book to Shelf">
            </form>
            <% }); %>
          </li>
        </ul>
      </div>
    </div>
  </main>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="/scripts/showForm.js"></script>
</body>

</html>
